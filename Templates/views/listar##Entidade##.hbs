{{#each erros}}
  <div class="alert alert-danger"> {{texto}} </div>
{{else}}
  
{{/each}}

<h1> Página de ##Entidade## </h1>

<a href='/##Entidade##//formCad##Entidade##'> 
    <button class="btn btn-success">Criar ##Entidade##</button>
</a>

{{#each array##Entidade##}}
    <div class= "card mt-4">
        <div class= "card-body">
            <h4> {{dataValues.nome}} </h4>
            <small>Slug:  {{dataValues.slug}}</small> <br>
            <small>Data de criação:  {{dataValues.date}}</small> <br> <br>
            <a href ='/##Entidade##/formAlt##Entidade##/{{dataValues.id}}'> 
                <button class='btn btn-success mt-3'> alterar </button> </a>
            <a href ='/##Entidade##/exc##Entidade##/{{dataValues.id}}'> 
                <button class='btn btn-danger mt-3'> deletar </button> </a>
        </div>
    </div>

{{else}}
    <h4 class="mt-4">Nenhuma ##Entidade##!</h4>
{{/each}}